
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "png", fallback: "no_image.png" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
       <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
         <i class="fa fa-user-cog"></i>
       <% end %>
      </div>
     
