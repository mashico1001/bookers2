<p id="notice"></p>



<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      
    <%= render partial: 'books/list', locals: { book: @book, user: @user } %>
    
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <p><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: "png", fallback: "images.png", size: '100x100' %></p>
            </td>
            <td>
              <p>
                <%= link_to book_path(book) do %>
                  <%= book.title %>
                <% end %></p>
            </td>
            <td>
              <p><%= book.body %></p>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


