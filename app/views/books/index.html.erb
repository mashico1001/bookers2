<H1>User Info</H1>



<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opnion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>

<% @books.each do |book| %>
<div>
  <p>投稿ユーザー画像：<%= image_tag('') %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
  <p>title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>
