<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
    <%= render partial: 'books/list', locals: { book: @book_new, user: @user } %>
      
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: "png", fallback: "no_image.png" %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <p><%= @book.body %></p>
            </td>
            
          <% if @book.user == current_user %>
            <td>
              <%= link_to edit_book_path, class: 'btn btn-sm btn-success' do %>
                Edit
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book), method: :delete, class: 'btn btn-sm btn-danger', "data-confirm" => "本当に消しますか？" do %>
              Destroy
              <% end %>
            </td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>