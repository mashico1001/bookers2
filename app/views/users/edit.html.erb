<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
       <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前", class: "form-control" %>
       </div>
       <div class="form-group">
        <% attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.png" %>
        <%= f.label :profile_image, "Image" %>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "form-control-file" %>
       </div>
       <div class="form-group">
        <%= f.label :introduction, "Introduction" %>
        <%= f.text_area :introduction, class: "form-control" %>
       </div>
       <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
       </div>
      <% end %>
    </div>
  </div>
</div>