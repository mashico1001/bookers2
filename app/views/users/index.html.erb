<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
      <%= render partial: 'books/list', locals: { book: @book, user: @user } %>
      
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <p><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: "png", fallback: "images.png", size: '100x100' %></p>
            </td>
            <td>
              <p><%= user.name %></p>
            </td>
            <td>
              <p><%= link_to "Show", user_path(user) %></p>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>