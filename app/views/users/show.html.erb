<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render partial: 'books/list', locals: { book: @book, user: @user } %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <p>
                <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "png", fallback: "images.png", size: '100x100' %>
                <% end %>
                </p>
            </td>
            <td>
              <p>
                <%= link_to book_path(book) do %>
                <%= book.title %>
                <% end %>
                </p>
            </td>
            <td>
              <p><%= book.body %></p>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>